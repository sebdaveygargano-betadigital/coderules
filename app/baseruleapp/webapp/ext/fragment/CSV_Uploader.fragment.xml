<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified">

    <Dialog
        id="fileUploadDialog"
        title="Upload Rules csv"
        stretchOnPhone="true"
        class="sapUiPopupWithPadding">

        <content>
            <!-- Just a simple FileUploader, no VBox needed -->
            <unified:FileUploader
                id="rulecsvUploader"
                name="file"
                placeholder="Select a CSV file..."
                width="100%"
                fileType="csv"
                change=".onFileSelected"
                sameFilenameAllowed="false"
                maximumFileSize="20"/>
        </content>

        <beginButton>
            <Button id="cancelButton"
                text="Cancel"
                press=".onCancelPressed"/>
        </beginButton>

        <endButton>
            <Button
                id="uploadButton"
                text="Upload"
                enabled="false"
                press=".onUploadPressed"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>
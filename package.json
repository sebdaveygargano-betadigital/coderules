{
  "name": "codeReviewRules",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-usercrud": "cds watch --open usercrud/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy codeReviewRules --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-baserulelist": "cds watch --open baserulelist/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-codeusersapp": "cds watch --open codeusersapp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "hana",
        "service": "code-review-rules-db"
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "connectivity": true,
      "destinations": true,
      "[hybrid]": {
        "auth": "xsuaa"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/usercrud",
    "app/baserulelist",
    "app/codeusersapp"
  ]
}

{
  "xsappname": "code-review-rules",
  "tenant-mode": "dedicated",
  "description": "Security for Code Review Rule App",
  "scopes": [
    {
      "name": "$XSAPPNAME.RuleAdmin",
      "description": "Manage (CRUD) code review rules",
      "grant-as-authority-to-apps": []
    },
    {
      "name": "$XSAPPNAME.RuleReader",
      "description": "Read-only access to code review rules"
    },
    {
      "name": "$XSAPPNAME.RuleCreator",
      "description": "May read all rules, and create rule templates",
      "grant-as-authority-to-apps": []
    },
    {
      "name": "$XSAPPNAME.RuleM2M",
      "description": "M2M authorisation scope.",
      "grant-as-authority-to-apps": [
        "sb-code-review-rules!t76906"
      ]
    }
  ],
  "authorities": [
    "$XSAPPNAME.RuleM2M"
  ],
  "role-templates": [
    {
      "name": "Admin",
      "description": "Role for managing rules",
      "scope-references": [
        "$XSAPPNAME.RuleAdmin"
      ]
    },
    {
      "name": "Reader",
      "description": "Read only role",
      "scope-references": [
        "$XSAPPNAME.RuleReader"
      ]
    },
    {
      "name": "Creator",
      "description": "Read and write role",
      "scope-references": [
        "$XSAPPNAME.RuleCreator"
      ]
    },
    {
      "name": "M2M",
      "description": "Machine access via client credentials.",
      "scope-references": [
        "$XSAPPNAME.RuleM2M"
      ]
    }
  ],
  "attributes": [],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://port5000-workspaces-ws-q3mog.ap10.applicationstudio.cloud.sap/login/callback"
    ]
  }
}